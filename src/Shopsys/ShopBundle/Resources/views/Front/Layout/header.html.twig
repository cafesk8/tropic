{% block header %}

    {% set shopInfoPhoneNumber = getShopInfoPhoneNumber() %}
    {% set shopInfoPhoneHours = getShopInfoPhoneHours() %}
    {% set shopInfoEmail = getShopInfoEmail() %}
    <div class="top-bar">
        <div class="top-bar__in">

            <ul class="top-bar__menu">
                <li class="top-bar__menu__item">
                    <a href="#" class="top-bar__menu__item__link js-not-implemented-yet">
                        {{ 'Bushman club'|trans }}
                    </a>
                </li>
                <li class="top-bar__menu__item">
                    <a href="#" class="top-bar__menu__item__link js-not-implemented-yet">
                        {{ 'Naše hodnoty'|trans }}
                    </a>
                </li>
                <li class="top-bar__menu__item">
                    <a href="#" class="top-bar__menu__item__link js-not-implemented-yet">
                        {{ 'Blog'|trans }}
                    </a>
                </li>
                <li class="top-bar__menu__item">
                    <a href="#" class="top-bar__menu__item__link js-not-implemented-yet">
                        {{ 'O nás'|trans }}
                    </a>
                </li>
                <li class="top-bar__menu__item">
                    <a href="#" class="top-bar__menu__item__link js-not-implemented-yet">
                        {{ 'Prodejny'|trans }}
                    </a>
                </li>
            </ul>

            <ul class="top-bar__menu top-bar__menu--right">
                <li class="top-bar__menu__item">
                    <span href="#" class="top-bar__menu__item__text">
                        <strong class="top-bar__menu__item__text top-bar__menu__item__text__spacer">{{ 'Buď bushman a měj zdarma'|trans }}:</strong>
                        {{ 'Poštovné'|trans }}
                        <span class="top-bar__menu__item__text__spacer">—</span>
                        {{ 'Výměnu'|trans }}
                        <span class="top-bar__menu__item__text__spacer">—</span>
                        {{ 'Záruku 25 let'|trans }}
                    </span>
                </li>
            </ul>
        </div>
    </div>
    <div class="web__container">
        <header class="header">
            <div class="header__menu dont-print">
                {{ render(controller('ShopsysShopBundle:Front/Article:menu')) }}
                {{ render(controller('ShopsysShopBundle:Front/Category:horizontalMenu')) }}
                <span class="all-categories">
                    <span class="all-categories__title">
                        {{ 'Všechny kategorie'|trans }}
                    </span>
                    <span class="all-categories__categories-links">
                        {{ render(controller('ShopsysShopBundle:Front/Category:hoverMenu')) }}
                    </span>
                </span>
            </div>

            <div class="header__logo">
                {% block logo %}
                <a class="logo" href="{{ url('front_homepage') }}">
                    <img src="{{ asset('assets/frontend/images/logo.png') }}" alt="{{ 'Online shop'|trans }}">
                </a>
                {% endblock %}
            </div>

            <div class="header__right dont-print">
                <ul class="menu-iconic">
                    {% if is_granted('ROLE_LOGGED_CUSTOMER') %}
                            <li class="box-dropdown__options__item js-dropdown-item'">
                            <a href="{{ url('front_customer_edit') }}" class="menu-iconic__item__link">
                                <i class="svg svg-user"></i>
                                <span>
                                    {{ app.user.firstName }} {{ app.user.lastName }}
                                </span>
                            </a>
                            <ul class="menu-iconic__sub">
                                <li class="menu-iconic__sub__item">
                                    <a href="{{ url('front_customer_edit') }}" class="menu-iconic__sub__item__link">{{ 'Personal data'|trans }}</a>
                                </li>
                                <li class="menu-iconic__sub__item">
                                    <a href="{{ url('front_customer_orders') }}" class="menu-iconic__sub__item__link">{{ 'My orders'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                            <li class="box-dropdown__options__item js-dropdown-item'">
                            <a href="{{ url('front_logout', { _csrf_token: csrf_token('frontend_logout')}) }}" class="js-logout-link-desktop menu-iconic__item__link">
                                <span>
                                    {{ 'Log out'|trans }}
                                </span>
                            </a>
                        </li>
                    {% else %}
                            <li class="box-dropdown__options__item js-dropdown-item'">
                            <a
                                href="{{ url('front_login') }}"
                                data-url="{{ url('front_login_window_form') }}"
                                class="js-login-link-desktop js-login-button menu-iconic__item__link"
                            >
                                <i class="svg svg-user"></i>
                                <span>
                                    {{ 'Log in'|trans }}
                                </span>
                            </a>
                        </li>
                            <li class="box-dropdown__options__item js-dropdown-item'">
                            <a href="{{ url('front_registration_register') }}" class="js-registration-link-desktop menu-iconic__item__link">
                                <span>
                                    {{ 'Registration'|trans }}
                                </span>
                            </a>
                        </li>
                    {% endif %}
                </ul>

                {{ render(controller('ShopsysShopBundle:Front/Cart:box')) }}
            </div>

            <div class="header__mobile dont-print">
                <div class="header__mobile-button header__mobile-button--menu">
                    <span class="header__mobile-button__in js-responsive-toggle" data-element="js-categories" data-hide-on-click-out="true">
                        <i class="svg svg-burger-menu"></i>
                        {{ 'Menu'|trans }}
                    </span>
                </div>

                {% if shopInfoPhoneNumber is not null %}
                <div class="header__mobile-button dont-print">
                    <a href="tel:{{ shopInfoPhoneNumber }}" class="header__mobile-button__in">
                        <i class="svg svg-phone"></i>
                    </a>
                </div>
                {% endif %}

                <div class="header__mobile-button">
                    <span class="header__mobile-button__in js-responsive-toggle" data-element="js-user-menu" data-hide-on-click-out="true">
                        <i class="svg svg-user"></i>
                    </span>
                    <div class="header__mobile-button__menu" id="js-user-menu">
                        {% if is_granted('ROLE_LOGGED_CUSTOMER') %}
                        <a href="{{ url('front_customer_edit') }}">
                            {{ 'Personal data'|trans }}
                        </a>
                        <a href="{{ url('front_customer_orders') }}">
                            {{ 'Orders'|trans }}
                        </a>
                        <a href="{{ url('front_logout', { _csrf_token: csrf_token('frontend_logout')}) }}">
                            {{ 'Log out'|trans }}
                        </a>
                        {% else %}
                        <a class="js-login-button" href="{{ url('front_login') }}" data-url="{{ url('front_login_window_form') }}">
                            {{ 'Log in'|trans }}
                        </a>
                        <a href="{{ url('front_registration_register') }}">
                            {{ 'Registration'|trans }}
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
            {# TODO KOD: temporary hidden durign implementation #}
            <div class="header__search display-none dont-print">
                {{ render(controller('ShopsysShopBundle:Front/Search:box')) }}
            </div>
        </header>
    </div>
    {{ render(controller('ShopsysShopBundle:Front/Advert:box',{'positionName' : 'header'})) }}
{% endblock %}
