{% import '@ShopsysShop/Front/Content/Product/productListMacro.html.twig' as productList %}

{% if productViews|length > 0 %}
    <div class="web__line">
        <div class="web__container web__container--light web__container--big-padding">
            <div class="box-last-visited">
                <div class="box-last-visited__title">
                    {{ 'Naposledy prohlížené produkty'|trans }}
                </div>

                {{ productList.horizontalList(productViews,  "list-last-visited", 'h3', 'last-visited') }}
            </div>
        </div>
    </div>
{% endif %}
