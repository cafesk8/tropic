{% extends '@ShopsysShop/Front/Layout/layoutWithoutPanel.html.twig' %}

{% block title %}
    {{ 'Personal information overview'|trans }}
{% endblock %}

{% block meta_description %}
    {{ parent() }}
{% endblock %}

{% block meta_robots -%}
    <meta name="robots" content="noindex">
{% endblock %}

{% block main_content %}
<div class="web__line">
    <div class="web__container web__container--big-padding">

        <h1 class="in-title in-title--big in-title--center">
            {{ title }}
        </h1>

        <div class="in-user-text">
            {{ personalDataSiteContent|raw }}
        </div>

        <div class="wrap-well wrap-well--big-padding">
            {{ form_start(form, { method: 'POST' }) }}
                {{ form_row(form.email) }}
                <div class="form-line margin-top-20">
                    <div class="form-line__input text-right">
                        {{ form_row(form.send) }}
                    </div>
                </div>
            {{ form_end(form) }}
            {{ form_errors(form) }}
        </div>

        {% if user is defined %}
            {{ include('@ShopsysShop/Front/Content/PersonalData/detail.html.twig') }}
        {% endif %}
    </div>
</div>

{% endblock %}
