<div class="box-articles">
    <div class="box-articles__title-big">
        {{ 'Načerpejte inspiraci'|trans }}
    </div>
    <div class="box-articles__title-small">
        {{ 'Zážitky z cest si nenecháváme pro sebe'|trans }}
    </div>
    <ul class="list-articles">
        {% for blogArticle in blogArticles %}
            <li class="list-articles__item">
                <div class="list-articles__item__image">
                    <a href="{{ url('front_blogarticle_detail', {'id': blogArticle.id}) }}" class="list-articles__item__image__link">
                        {{ image(blogArticle, { size: 'list', alt: blogArticle.name }) }}
                    </a>
                </div>
                <div class="list-articles__item__content">
                    <div class="list-tags">
                        {{ render(controller('ShopsysShopBundle:Front/BlogArticle:mainBlogCategoryForBlogArticle', { blogArticle: blogArticle, spanClass: 'list-tags__tag' })) }}
                    </div>
                    <a href="{{ url('front_blogarticle_detail', {'id': blogArticle.id}) }}" class="list-articles__item__content__title underline">
                        {{ blogArticle.name }}
                    </a>
                    <div class="list-articles__item__content__text">
                        {{ blogArticle.perex }}
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
    <div class="box-articles__bottom">
        <a href="{{ url('front_blogcategory_detail', { id: constant('Shopsys\\ShopBundle\\Model\\Blog\\Category\\BlogCategory::BLOG_MAIN_PAGE_CATEGORY_ID')}) }}" class="box-articles__bottom__link underline">{{ 'Přejít na výpis všech článků'|trans }}</a>
    </div>
</div>
