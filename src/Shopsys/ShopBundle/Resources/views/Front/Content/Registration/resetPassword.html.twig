{% extends '@ShopsysShop/Front/Layout/layoutWithoutPanel.html.twig' %}

{% block meta_robots -%}
    <meta name="robots" content="noindex, follow">
{% endblock %}

{% block title %}
    {{ 'Forgotten password'|trans }}
{% endblock %}

{% block main_content %}
<div class="web__line">
    <div class="web__container web__container--big-padding">
        <div class="wrap-well wrap-well--big-padding">
            <h1 class="in-article__title text-center">{{ 'Forgotten password'|trans }}</h1>

            {{ form_errors(form) }}

            {{ form_start(form) }}

                {{ form_row(form.email, { label: 'E-mail'|trans }) }}

                {{ form_widget(form.submit, { label: 'Reset password'|trans }) }}

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
