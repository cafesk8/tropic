{% extends '@ShopsysShop/Front/Layout/layoutWithoutPanel.html.twig' %}

{% block meta_robots -%}
    <meta name="robots" content="noindex, follow">
{% endblock %}

{% block title %}
    {{ 'Login'|trans }}
{% endblock %}

{% block main_content %}

    {{ form_start(form, {attr: {'multipleForm': true}}) }}
    {{ form_errors(form, {errors_attr: { class: 'in-message--alert' }}) }}

        <h1>{{ 'Login'|trans }}</h1>


        <dl class="form-line">
            <dt>
                {{ form_label(form.email) }}
            </dt>
            <dd>
                {{ form_widget(form.email) }}
            </dd>
        </dl>

        <dl class="form-line">
            <dt>
                {{ form_label(form.password) }}
            </dt>
            <dd>
                {{ form_widget(form.password) }}
            </dd>
        </dl>

        {% do form.rememberMe.setRendered %}

        <dl class="form-line">
            <dt></dt>
            <dd>
                {{ form_widget(form.login, {label: 'Log in'|trans}) }}
            </dd>
        </dl>
        <dl class="form-line">
            <dt></dt>
            <dd>
                <a href="{{ url('front_registration_reset_password') }}">{{ 'Forgot your password?'|trans }}</a>
            </dd>
        </dl>

    {{ form_end(form) }}

{% endblock %}
