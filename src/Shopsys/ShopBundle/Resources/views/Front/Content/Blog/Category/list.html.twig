{% if blogCategories|length > 0 %}
    <div class="box-blog__categories">
        <div class="box-blog__categories__title">
            {{ 'Kategorie článků'|trans }}
        </div>
        {% for blogCategory in blogCategories %}
            <a href="{{ url('front_blogcategory_detail', { id: blogCategory.id }) }}" class="box-blog__categories__item blog-category-level-{{ blogCategory.level }}">
                {{ blogCategory.name }}
            </a>
        {% endfor %}
    </div>
{% endif %}
