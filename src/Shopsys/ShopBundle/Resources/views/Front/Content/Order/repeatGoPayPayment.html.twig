{% extends '@ShopsysShop/Front/Layout/layoutWithoutPanel.html.twig' %}

{% block meta_robots -%}
    <meta name="robots" content="noindex, follow">
{% endblock %}

{% block title %}
    {{ 'Opakovat platbu'|trans }}
{% endblock %}

{% block breadcrumb %}
{% endblock %}

{% block main_content %}
    <div class="web__line">
        <div class="web__container web__container--big-padding">
            <h1 class="in-title in-title--center in-title--big">{{ 'Uhrazení objednávky č. %orderNumber% platební kartou.'|trans({'%orderNumber%': order.number}) }}</h1>

            <p class="in-user-text text-center">{{ 'Nyní budete přesměrováni na platební bránu GoPay.'|trans }}</p>
        </div>
    </div>

    {% if goPayData is defined and goPayData|length != 0 %}
        {% include '@ShopsysShop/Front/Inline/Payment/goPayPayment.html.twig' %}
    {% endif %}
{% endblock %}
