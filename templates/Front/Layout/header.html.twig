{% block header %}
    {% set domainId = getDomain().id %}
    {% set shopInfoPhoneNumber = getShopInfoPhoneNumber() %}
    {% set shopInfoPhoneHours = getShopInfoPhoneHours() %}
    {% set shopInfoEmail = getShopInfoEmail() %}
    <div class="web__container web__container--transparent">
        <div class="top-bar">
            <div class="top-bar__in">
                <ul class="top-bar__menu top-bar__menu--mobile-visible">
                    <li class="top-bar__menu__item">
                        <span class="top-bar__menu__item__text">
                            <span class="top-bar__menu__item__text__title">{{ 'Bonusový program'|trans }}:</span>
                            {{ 'Slevy pro každého až 18 %'|trans }}
                        </span>
                    </li>
                </ul>

                <ul class="top-bar__menu">
                    {{ render(controller('App\\Controller\\Front\\ArticleController:headerListAction')) }}
                    <li class="top-bar__menu__item">
                        <a href="{{ url(
                            'front_blogcategory_detail', {
                                'id': constant('App\\Model\\Blog\\Category\\BlogCategory::BLOG_MAIN_PAGE_CATEGORY_ID')
                            }
                        ) }}"
                        class="top-bar__menu__item__link"
                        >
                            {{ 'Blog'|trans }}
                        </a>
                    </li>
                    {% if domainId != 3 %}
                        <li class="top-bar__menu__item">
                            <a href="{{ url('front_store_index') }}" class="top-bar__menu__item__link">
                                {{ 'Prodejny'|trans }}
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
    <div class="web__container web__container--dark web__container--border-radius">
        <header class="header {{ block('headerClass') }}">
            <div class="header__logo">
                {% block logo %}
                <a class="logo" href="{{ url('front_homepage') }}">
                    <img src="{{ asset('assets/frontend/images/logo.png') }}" alt="{{ 'Online shop'|trans }}">
                </a>
                {% endblock %}
            </div>

            <div class="header__right dont-print">
                <div class="header__right__menu">
                    <div class="box-dropdown box-dropdown--without-arrow js-hover-intent box-dropdown--small-padding">
                        <div class="box-dropdown__select js-responsive-toggle"
                            data-element="js-header-burger-menu"
                            data-hide-on-click-out="true"
                            data-parent-give-class="true"
                            data-slide-toggle-disabled="true"
                        >
                            <i class="header__right__search__icon-menu svg svg-burger-menu"></i>
                        </div>
                        <div class="box-dropdown__options box-dropdown__options--menu" id="js-header-burger-menu">
                            {% cache 'categories_mobile_for_domain_' ~ getDomain().id {time: 60 * 60 * 24} %}
                                {{ render(controller('App\\Controller\\Front\\CategoryController:horizontalMenuMobileAction')) }}
                                {{ render(controller('App\\Controller\\Front\\CategoryController:hoverMenuAction', { dropdownMenu: false })) }}
                            {% endcache %}
                        </div>
                    </div>
                </div>

                <div class="header__right__search">
                    <div class="box-dropdown box-dropdown--search box-dropdown--without-arrow box-dropdown--small-padding js-hover-intent js-search-opener">
                        <div class="box-dropdown__select js-responsive-toggle"
                            data-element="js-header-search"
                            data-hide-on-click-out="true"
                            data-parent-give-class="true"
                            data-slide-toggle-disabled="true"
                        >
                            <i class="svg svg-search"></i>
                        </div>
                        <div class="box-dropdown__options box-dropdown__options--search" id="js-header-search">
                            {{ render(controller('App\\Controller\\Front\\SearchController:boxAction')) }}
                        </div>
                    </div>
                </div>

                <div class="header__right__actions">
                    <div class="header__right__actions__item">
                        <div class="box-dropdown js-hover-intent">
                            <div class="box-dropdown__select box-dropdown__select--secondary js-responsive-toggle"
                                data-element="js-header-customer"
                                data-hide-on-click-out="true"
                                data-parent-give-class="true"
                                data-slide-toggle-disabled="true"
                            >
                                <i class="box-dropdown__select__user svg svg-user"></i>
                                <div class="box-dropdown__select__text">
                                    {% if is_granted('ROLE_LOGGED_CUSTOMER') %}
                                        {{ 'Váš účet'|trans }}
                                    {% else %}
                                        {{ 'Přihlášení'|trans }}
                                        <div class="box-dropdown__select__text__small">{{ 'a registrace'|trans }}</div>
                                    {% endif %}
                                </div>
                                <i class="box-dropdown__select__arrow box-dropdown__select__arrow--up"></i>
                                <i class="box-dropdown__select__arrow box-dropdown__select__arrow--down"></i>
                            </div>
                            <div class="box-dropdown__options
                                {% if is_granted('ROLE_LOGGED_CUSTOMER') %}
                                    box-dropdown__options--logged
                                {% else %}
                                    box-dropdown__options--login
                                {% endif %}"
                                id="js-header-customer">
                                {% if is_granted('ROLE_LOGGED_CUSTOMER') %}
                                    <div class="box-dropdown__options__item js-dropdown-item'">
                                        <a href="{{ url('front_customer_edit') }}" class="menu-iconic__item__link">
                                            {{ app.user.firstName }} {{ app.user.lastName }}
                                        </a>
                                    </div>
                                    <div class="box-dropdown__options__item js-dropdown-item'">
                                        <a href="{{ url('front_customer_orders') }}" class="menu-iconic__item__link">
                                            {{ 'My orders'|trans }}
                                        </a>
                                    </div>
                                    <div class="box-dropdown__options__item js-dropdown-item'">
                                        <a href="{{ url('front_logout', { _csrf_token: csrf_token('frontend_logout')}) }}" class="menu-iconic__item__link js-logout-link-desktop">
                                            {{ 'Log out'|trans }}
                                        </a>
                                    </div>
                                {% else %}
                                    {{ render(controller('App\\Controller\\Front\\LoginController:windowFormAction')) }}
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="header__right__actions__item">
                        {{ render(controller('App\\Controller\\Front\\CartController:boxAction')) }}
                    </div>
                </div>
            </div>

            <div class="header__menu dont-print">
                
                    {{ render(controller('App\\Controller\\Front\\CategoryController:hoverMenuAction')) }}
                
                <div class="contact-us">
                    <div class="contact-us__open-hours">
                        {{ shopInfoPhoneHours }}
                    </div>
                    <a class="contact-us__phone" href="tel:{{ shopInfoPhoneNumber }}">
                        <i class="svg svg-phone"></i>
                        <spam class="contact-us__phone__text">{{ shopInfoPhoneNumber }}</span>
                    </a>
                </div>
            </div>
        </header>
    </div>
{% endblock %}
