{{ form_start(form, {attr: {'data-on-submit': 'contactFormAjaxSubmit'}}) }}
<h2 class="in-title in-title--center in-title--with-gap">{{ mainText|raw }}</h2>

{{ form_errors(form) }}
<div class="wrap-article__row">
    <div class="wrap-article__row__half">
        {{ form_row(form.name, { label: 'Jméno'|trans, attr: { tabindex: 1 }, errors_attr: { class: 'form-error--under' }  }) }}
    </div>
    <div class="wrap-article__row__half">
        {{ form_row(form.email, { label: 'E-mail'|trans, attr: { tabindex: 3 }, errors_attr: { class: 'form-error--under' }  }) }}
    </div>
</div>
<div class="wrap-article__row">
    <div class="wrap-article__row__half">
        {{ form_row(form.surname, { label: 'Příjmení'|trans, attr: { tabindex: 2 }, errors_attr: { class: 'form-error--under' }  }) }}
    </div>
    <div class="wrap-article__row__half">
        {{ form_row(form.telephone, { label: 'Telefon'|trans, attr: { tabindex: 4 }, errors_attr: { class: 'form-error--under' }  }) }}
    </div>
</div>
<div class="wrap-article__row">
    <div class="wrap-article__row__full">
        <div class="form-line">
            <div class="form-line__input">
                <label class="input-label" for="{{ form.message.vars.id }}">
                    {{ 'Message'|trans }}
                </label>
                {{ form_widget(form.message, { attr: { tabindex: 5 } }) }}
            </div>
            <div class="form-line__error">
                {{ form_errors(form.message, { errors_attr: { class: 'form-error--under' }} ) }}
            </div>
        </div>
    </div>
</div>
<div class="wrap-article__row">
    <div class="wrap-article__row__full">
        {% if privacyPolicyArticle is not null %}
            {% set articleUrl = url('front_article_detail', {'id': privacyPolicyArticle.id}) %}
            {{ form_row(
                form.privacyPolicy,
                {
                    label:  'I agree with  <a href="%url%" target="_blank">privacy policy</a>.'|trans({'%url%': articleUrl}),
                    errors_attr: { class: 'form-error--under' },
                    rawLabel:true,
                }
            )}}
        {% else %}
            {{ form_row(
                form.privacyPolicy,
                {
                    label:  'I agree with privacy policy.'|trans,
                    errors_attr: { class: 'form-error--under' }
                }
            )}}
        {% endif %}
        <div class="text-center">
            {{ form_widget(form.send, { label: 'Odeslat zprávu'|trans, attr: {class: 'btn--success'}}) }}
        </div>
    </div>
</div>
{{ form_end(form) }}
{{ init_js_validation(form, true) }}
