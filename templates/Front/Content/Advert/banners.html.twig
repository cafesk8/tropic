<div class="web__line">
    <div class="web__container web__container--no-padding">
        <div class="list-grid-images">
            <ul class="list-grid-images__portrait">
                {% if isSlovakDomain() %}
                    <li class="list-grid-images__portrait__item">
                        <span class="list-grid-images__portrait__link">
                            <picture>
                                <img alt="VELKANOC" title="VELKANOC" src="{{ asset('public/frontend/images/velikonoce_sk.png') }}" loading="lazy" data-src="{{ asset('public/frontend/images/velikonoce_sk.png') }}" class="image-noticer-rectangle loaded" itemprop="image">
                            </picture>

                            <picture>
                                <img alt="VELKANOC" title="VELKANOC" src="{{ asset('public/frontend/images/velikonoce_mobil_sk.png') }}" loading="lazy" data-src="{{ asset('public/frontend/images/velikonoce_mobil_sk.png') }}" class="image-noticer-mobile loaded" itemprop="image">
                            </picture>
                        </span>
                    </li>
                {% else %}
                    <li class="list-grid-images__portrait__item">
                        <span class="list-grid-images__portrait__link">
                            <picture>
                                <img alt="VELIKONOCE" title="VELIKONOCE" src="{{ asset('public/frontend/images/velikonoce_cz.png') }}" loading="lazy" data-src="{{ asset('public/frontend/images/velikonoce_cz.png') }}" class="image-noticer-rectangle" itemprop="image">
                            </picture>

                            <picture>
                                <img alt="VELIKONOCE" title="VELIKONOCE" src="{{ asset('public/frontend/images/velikonoce_mobil_cz.png') }}" loading="lazy" data-src="{{ asset('public/frontend/images/velikonoce_mobil_cz.png') }}" class="image-noticer-mobile" itemprop="image">
                            </picture>
                        </span>
                    </li>
                {% endif %}

                {% if fourthRectangle is not null %}
                    <li class="list-grid-images__portrait__item">
                        <a href="{{ fourthRectangle.link }}" class="list-grid-images__portrait__link">
                            {{ image(fourthRectangle, {size: 'rectangle', alt: fourthRectangle.name}) }}
                            {{ image(fourthRectangle, {type: 'mobile', alt: fourthRectangle.name}) }}
                        </a>
                    </li>
                {% endif %}
            </ul>
            <ul class="list-grid-images__landscape">
                {% if isSlovakDomain() %}
                    <li class="list-grid-images__landscape__item">
                        <a href="https://www.tropicfishing.sk/mivardi/?utm_source=web&utm_medium=banner&utm_campaign=mivardi" class="list-grid-images__landscape__link">
                            <picture>
                                <img alt="Mivardi" title="Mivardi" src="{{ asset('public/frontend/images/mivardi2_sk.png') }}" loading="lazy" data-src="{{ asset('public/frontend/images/mivardi2_sk.png') }}" class="image-noticer-square" itemprop="image">
                            </picture>
                        </a>
                    </li>
                {% else %}
                    <li class="list-grid-images__landscape__item">
                        <a href="https://www.tropicfishing.cz/mivardi/?utm_source=web&utm_medium=banner&utm_campaign=mivardi" class="list-grid-images__landscape__link">
                            <picture>
                                <img alt="Mivardi" title="Mivardi" src="{{ asset('public/frontend/images/mivardi2_cz.png') }}" loading="lazy" data-src="{{ asset('public/frontend/images/mivardi2_cz.png') }}" class="image-noticer-square" itemprop="image">
                            </picture>
                        </a>
                    </li>
                {% endif %}

