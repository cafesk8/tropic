{% if advert and not advert.isHidden() %}
    {% set sizeInfoName = sizeInfo ?? advert.positionName %}

    <div class="in-place in-place--{{sizeInfoName}}">
        {% if advert.type == 'image' %}
            {% if advert.link == null %}
                {{ image(advert, { size: sizeInfoName }) }}
            {% else %}
                <a href="{{ advert.link }}">{{ image(advert, { size: sizeInfoName }) }}</a>
            {% endif %}
        {% elseif advert.type == 'code' %}
            {{ advert.code | raw }}
        {% endif %}
    </div>
{% endif %}