{% import 'Front/Content/Product/saleStockQuantityMacro.html.twig' as saleStockQuantity %}
{% import 'Front/Content/Product/productAvailabilityInDaysMacro.html.twig' as availabilityInDays %}
{% if productView.action.isMainVariant and productView.isAnyVariantInStock %}
    {{ 'Dostupnost dle varianty'|trans }}
{% elseif productView.realSaleStocksQuantity > 0 %}
    {{ saleStockQuantity.showInfo(productView.realSaleStocksQuantity, productView.unitName) }}
{% elseif productView.isAvailableInDays %}
    {{ availabilityInDays.productAvailabilityInDays(productView.deliveryDays) }}
{% else %}
    {{ productView.availability }}
{% endif %}
