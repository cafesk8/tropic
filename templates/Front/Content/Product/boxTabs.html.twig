{% macro productTabs(
    product,
    variants,
    productMainCategory,
    visible,
    mainVariants,
    youtubeDetails,
    productSizeArticleId,
    accessories,
    accessoriesHeadline,
    productVisibleProductCategoryDomains
) %}
    {% set domain = getDomain() %}
    {% set descriptionHeadline = 'Popis'|trans %}
    {% set parametersHeadline = 'Parametry'|trans %}
    {% set videosHeadline = 'Videa'|trans %}

    {% set productParameterValues = getProductParameterValues(product) %}
    {% if product.getDescription(domain.id)
        or productParameterValues > 0
    %}
    <div class="box-detail__content {% if visible == false %}display-none{% endif %} {% if product.mainVariantGroup is not null %}js-product-detail js-product-detail-{{ product.id }}{% endif %}">
        <div class="in-tab in-tab--full-width js-anchor-tabs">
            <div class="in-tab__content">
                <div class="in-tab__content__left">
                    {% if product.getDescription(domain.id) %}
                        <div class="in-tab__content__title js-tabs-button active" data-tab-id="description">
                            <a href="#" class="in-tab__content__title__link underline">
                                {{ descriptionHeadline }}
                            </a>
                            <i class="svg svg-triangle"></i>
                        </div>
                        <div class="in-tab__content__item js-tabs-content active" data-tab-id="description">
                            <div class="in-user-text" itemprop="description">
                                {% if product.getDescription(domain.id) %}
                                    <p>
                                        {{ product.getDescription(domain.id)|raw }}
                                    </p>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}

                    {% if youtubeDetails %}
                        <div id="video">
                            <div class="in-tab__content__title js-tabs-button active" data-tab-id="videos">
                                <a href="#" class="in-tab__content__title__link underline">
                                    {{ videosHeadline }}
                                </a>
                                <i class="svg svg-triangle"></i>
                            </div>
                            <div class="in-tab__content__item js-tabs-content active" data-tab-id="videos">
                                <div class="in-user-text" itemprop="videos">
                                    <h3 class="in-user-text__title">
                                        {{ videosHeadline }}
                                    </h3>
                                    {% for youtubeDetail in youtubeDetails %}
                                        <div class="youtubeWrapper margin-bottom-10">
                                            <iframe
                                                    width="560"
                                                    height="315"
                                                    src="https://www.youtube.com/embed/{{ youtubeDetail.getVideoId() }}"
                                                    frameborder="0"
                                                    allowfullscreen
                                            ></iframe>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endif %}

                </div>

                <div class="in-tab__content__right">
                    {% if productParameterValues > 0 %}

                        <div class="in-tab__content__title js-tabs-button active" data-tab-id="parameters">
                            <a href="#" class="in-tab__content__title__link underline">
                                {{ parametersHeadline }}
                            </a>
                            <i class="svg svg-triangle"></i>
                        </div>

                        <div class="in-tab__content__item js-tabs-content active" data-tab-id="parameters">
                            <h3 class="in-user-text__title">
                                {{ parametersHeadline }}
                            </h3>

                            {% if product.mainVariantGroup is not null %}
                                <div class="js-product-variant-detail-wrapper">
                                    <div class="js-product-variant-detail-select-info">
                                        <div class="in-user-text">
                                            <p class="padding-left-20">{{ 'Pro zobrazení parametrů si vyber z velikostí.'|trans }}</p>
                                        </div>

                                        <div class="padding-bottom-50">
                                            <div class="box-detail__tags__row padding-left-20">
                                                {{ _self.productCategoryDomains(productVisibleProductCategoryDomains) }}
                                            </div>
                                        </div>

                                    </div>
                                    {% for variant in variants %}
                                        {% set productParameterValuesForVariant = getProductParameterValues(variant) %}
                                        <div class="display-none js-product-variant-detail js-product-variant-detail-{{ variant.id }}">
                                            {{ _self.parameters(variant, productParameterValuesForVariant, parametersHeadline, productVisibleProductCategoryDomains) }}
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                {{ _self.parameters(product, productParameterValues, parametersHeadline, productVisibleProductCategoryDomains) }}
                            {% endif %}

                        </div>

                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% endif %}
{% endmacro %}

{% macro parameters(product, productParameterValues, parametersHeadline, productVisibleProductCategoryDomains) %}
    {% if productParameterValues|length > 0 %}
            <div class="box-detail__params">
                <div class="box-detail__params__row">
                    {% if productParameterValues > 0 %}
                    <ul class="list-params">
                        {% for productParameterValue in productParameterValues %}
                            <li class="list-params__item">
                                <span class="list-params__item__text">
                                    <span class="list-params__item__text__name">
                                        {{ productParameterValue.parameter.name }}:
                                    </span>
                                    <span class="list-params__item__text__value">
                                        {{ productParameterValue.value.text }}
                                    </span>
                                </span>
                            </li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                </div>
                <div class="box-detail__tags__row">
                    {{ _self.productCategoryDomains(productVisibleProductCategoryDomains) }}
                </div>
            </div>
    {% endif %}
{% endmacro %}

{% macro productCategoryDomains(productVisibleProductCategoryDomains) %}

    <div class="box-detail__tags__title">{{ 'Najdete v kategoriích'|trans }}</div>
    <div class="box-detail__tags__values">
        <div class="list-tags">
            {% for productCategoryDomain in productVisibleProductCategoryDomains %}
                <a href="{{ url('front_product_list', { id: productCategoryDomain.category.id }) }}" class="list-tags__tag">
                    {{ productCategoryDomain.category.name }}
                </a>
            {% endfor %}
        </div>
    </div>

{% endmacro %}
