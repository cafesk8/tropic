{% macro loadGalleryImages(product, galleryImages, showGalleryMaxCount, youtubeVideoIds, typeSetOrSupplierSet) %}
    <div class="box-gallery dont-print js-gallery">
        <div class="box-gallery__images">
            {% for galleryImage in galleryImages %}
                <div class="box-gallery__item{% if loop.index > showGalleryMaxCount %} display-none{% endif %}
                {% if loop.index == 1 and typeSetOrSupplierSet is same as(false) %} display-none{% else %} js-gallery-item{% endif %}"
                >
                    <a href="{{ imageUrl(galleryImage, 'original') }}"
                       class="box-gallery__item__link js-gallery-slide-link">
                        {{ image(galleryImage, {size: 'thumbnail'}) }}
                    </a>
                </div>
            {% endfor %}
        </div>
        <div class="box-gallery__links">
            {% if galleryImages|length > showGalleryMaxCount %}
                <div class="box-gallery__item box-gallery__item--more js-gallery-item-more">
                    <a href="#" class="box-gallery__item__link">
                        {{ 'Další'|trans }} ({{ galleryImages|length - showGalleryMaxCount }})
                    </a>
                </div>
            {% endif %}
            {% if youtubeVideoIds %}
                <div class="box-gallery__item box-gallery__item--video{% if galleryImages|length <= 1%} box-gallery__item--without-border{% endif %}">
                    {% if product.isMainVariant %}
                        <a
                            href="#video-variant-desktop"
                            class="box-gallery__item__link box-gallery__item__link--desktop js-anchor-link"
                        >
                            <img src="https://img.youtube.com/vi/{{ youtubeVideoIds|first }}/0.jpg"
                                alt="Youtube Video"
                                title="Youtube Video">
                            <div class="box-gallery__item__link__play">
                                <div class="box-gallery__item__link__play__icon"></div>
                            </div>
                        </a>
                        <a
                            href="#video"
                            class="box-gallery__item__link box-gallery__item__link--mobile js-anchor-link"
                        >
                            <img src="https://img.youtube.com/vi/{{ youtubeVideoIds|first }}/0.jpg"
                                alt="Youtube Video"
                                title="Youtube Video">
                            <div class="box-gallery__item__link__play">
                                <div class="box-gallery__item__link__play__icon"></div>
                            </div>
                        </a>
                    {% else %}
                        <a
                            href="#video"
                            class="box-gallery__item__link js-anchor-link"
                        >
                            <img src="https://img.youtube.com/vi/{{ youtubeVideoIds|first }}/0.jpg"
                                alt="Youtube Video"
                                title="Youtube Video">
                            <div class="box-gallery__item__link__play">
                                <div class="box-gallery__item__link__play__icon"></div>
                            </div>
                        </a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
{% endmacro %}
