{% extends 'Front/Layout/layoutWithoutPanel.html.twig' %}

{% set orderStep = flow.getCurrentStepNumber() %}

{% block meta_robots -%}
    <meta name="robots" content="noindex, follow">
{% endblock %}

{% block title %}
    {{ 'Order [noun]'|trans }}
{% endblock %}

{% block breadcrumb %}
{% endblock %}

{% block flashMessage %}
{% endblock %}

{% block infoRow %}
{% endblock %}

{% block headerLayoutClass %}web__header--small{% endblock %}

{% block header %}
    {% set shopInfoPhoneNumber = getShopInfoPhoneNumber() %}
    {% set shopInfoPhoneHours = getShopInfoPhoneHours() %}

    <div class="web__container web__container--transparent">
        <header class="header header--small">
            <div class="header__logo">
                {% block logo %}
                    <a class="logo" href="{{ url('front_homepage') }}">
                        <img src="{{ asset('public/frontend/images/logo-small.png') }}" alt="{{ 'Online shop'|trans }}">
                        <span class="logo__text">{{ 'Framework'|trans }}</span>
                    </a>
                {% endblock %}
            </div>
            <div class="header__contact dont-print">
                <div class="header__contact__phone">
                    <a href="tel:{{ shopInfoPhoneNumber }}">{{ shopInfoPhoneNumber }}</a>
                </div>
                <div class="header__contact__text">
                    {{ 'Ozvěte se nejlépe ve všední dny mezi'|trans }} {{ shopInfoPhoneHours }}.
                </div>
            </div>
        </header>
    </div>
{% endblock %}

{% block main_content %}
    {{ form_start(form, { attr: { id: "js-order-form", 'data-ajax-save-url': url('front_order_save_form') }}) }}
        {% include 'Front/Content/Order/step' ~ orderStep ~ '.html.twig' %}
    {{ form_end(form) }}

    <span class="js-payment-transport-relations" data-relations="{{ paymentTransportRelations }}"></span>
{% endblock %}

{% block footer %}
    {% embed 'Front/Layout/footer.html.twig' %}
        {% if orderStep in [2,3] %}
            {% block footer__links %}{% endblock %}
        {% endif %}
    {% endembed %}
{% endblock %}
