{% if breadcrumbItems is not null %}
    <div class="web__line">
        <div class="web__container">
            <div class="box-breadcrumb">
                <a href="{{ url('front_homepage') }}" class="box-breadcrumb__item">
                    {{ 'Ãšvod'|trans }}
                </a>
                {% for breadcrumbItem in breadcrumbItems %}
                    <span class="box-breadcrumb__item box-breadcrumb__item--separator"><i class="svg svg-fish"></i></span>
                    {% if breadcrumbItem.routeName is not null %}
                        <a class="box-breadcrumb__item" href="{{ url(breadcrumbItem.routeName, breadcrumbItem.routeParameters) }}">
                            {{- breadcrumbItem.name -}}
                        </a>
                    {% else %}
                        <span class='box-breadcrumb__item box-breadcrumb__item--current'>
                            {{- breadcrumbItem.name -}}
                        </span>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
