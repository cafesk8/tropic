{% block main_content %}
<?xml version="1.0" encoding="Windows-1250" ?>
<dat:dataPack id="a55"
	ico="{{ pohodaCompanyIco }}"
	application="Import Adresáře ShopSys"
	version="2.0"
	note="Import Adresáře ShopSys"
	xmlns:dat="http://www.stormware.cz/schema/version_2/data.xsd"
	xmlns:adb="http://www.stormware.cz/schema/version_2/addressbook.xsd"
	xmlns:ord="http://www.stormware.cz/schema/version_2/order.xsd"
	xmlns:typ="http://www.stormware.cz/schema/version_2/type.xsd"
	xmlns:ftr="http://www.stormware.cz/schema/version_2/filter.xsd" >

{% for pohodaCustomer in pohodaCustomers %}
	<dat:dataPackItem id="adr{{ date().timestamp }}-{{ pohodaCustomer.eshopId }}" version="2.0">
		<adb:addressbook version="2.0">
			<adb:actionType>
				<adb:update update="true" add="true">
					<ftr:filter>
						<ftr:extId>
							<typ:ids>{{ pohodaCustomer.eshopId }}</typ:ids>
							<typ:exSystemName>ShopSys</typ:exSystemName>
							<typ:exSystemText>ShopSys</typ:exSystemText>
						</ftr:extId>
					</ftr:filter>
				</adb:update>
			</adb:actionType>
			<adb:addressbookHeader>
				<adb:identity>
					<typ:extId>
						<typ:ids>{{ pohodaCustomer.eshopId }}</typ:ids>
						<typ:exSystemName>ShopSys</typ:exSystemName>
						<typ:exSystemText>ShopSys</typ:exSystemText>
					</typ:extId>

					<typ:address>
						<typ:company>{{ pohodaCustomer.address.company }}</typ:company>
						<typ:division></typ:division>
						<typ:name>
							<![CDATA[{{ pohodaCustomer.address.name }}]]>
						</typ:name>
						<typ:city>
							<![CDATA[{{ pohodaCustomer.address.city }}]]>
						</typ:city>
						<typ:street>
							<![CDATA[{{ pohodaCustomer.address.street }}]]>
						</typ:street>
						<typ:zip>{{ pohodaCustomer.address.zip }}</typ:zip>
						<typ:ico>{{ pohodaCustomer.address.ico }}</typ:ico>
						<typ:dic>{{ pohodaCustomer.address.dic }}</typ:dic>
						<typ:country>
							<typ:ids>
								<![CDATA[{{ pohodaCustomer.address.country }}]]>
							</typ:ids>
						</typ:country>
						<typ:phone>
							<![CDATA[{{ pohodaCustomer.address.phone }}]]>
						</typ:phone>
						<typ:email>
							<![CDATA[{{ pohodaCustomer.address.email }}]]>
						</typ:email>
					</typ:address>

					{% if pohodaCustomer.shipToAddress is not null %}
						<typ:shipToAddress>
							<typ:company>{{ pohodaCustomer.shipToAddress.company }}</typ:company>
							<typ:division></typ:division>
							<typ:name>
								<![CDATA[{{ pohodaCustomer.shipToAddress.name }}]]>
							</typ:name>
							<typ:city>
								<![CDATA[{{ pohodaCustomer.shipToAddress.city }}]]>
							</typ:city>
							<typ:street>
								<![CDATA[{{ pohodaCustomer.shipToAddress.street }}]]>
							</typ:street>
							<typ:zip>{{ pohodaCustomer.shipToAddress.zip }}</typ:zip>
							<typ:country>
								<typ:ids>
									<![CDATA[{{ pohodaCustomer.shipToAddress.country }}]]>
								</typ:ids>
							</typ:country>
						</typ:shipToAddress>
					{% endif %}

				</adb:identity>

				<adb:priceIDS>Registr</adb:priceIDS>
				<adb:region></adb:region>
				<adb:phone>
					<![CDATA[{{ pohodaCustomer.address.phone }}]]>
				</adb:phone>
				<adb:mobil></adb:mobil>
				<adb:fax></adb:fax>
				<adb:email>
					<![CDATA[{{ pohodaCustomer.address.email }}]]>
				</adb:email>
				<adb:web></adb:web>
				<adb:message></adb:message>
			</adb:addressbookHeader>
		</adb:addressbook>
	</dat:dataPackItem>
{% endfor %}

</dat:dataPack>
{% endblock %}