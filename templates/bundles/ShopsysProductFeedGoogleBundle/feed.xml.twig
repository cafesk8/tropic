{% extends '@!ShopsysProductFeedGoogle/feed.xml.twig' %}

{% block item %}
    <item>
        <g:id>{{ item.id }}</g:id>
        <title>{{ item.title }}</title>
        <g:item_group_id>{{ item.catnum }}</g:item_group_id>
        <g:description>{{ item.description|striptags|replace({"\n": ' '})|trim }}</g:description>
        <link>{{ item.link }}</link>
        {% if item.categoryFullPath is not null -%}
            <g:product_type>{{ item.categoryFullPath }}</g:product_type>
        {% endif %}
        {% if item.imageLink is not null -%}
            <g:image_link>{{ item.imageLink }}</g:image_link>
        {% endif -%}
        <g:availability>{{ item.availability }}</g:availability>
        <g:price>{{ item.price.priceWithVat|moneyFormat(2) }} {{ item.currency.code }}</g:price>
        {%  if item.brand is not null -%}
            <g:brand>{{ item.brand }}</g:brand>
        {% endif -%}
        {% for type, value in item.identifiers %}
            <g:{{ type }}>{{ value }}</g:{{ type }}>
        {% else %}
            <g:identifier_exists>no</g:identifier_exists>
        {% endfor %}
        <g:adult>no</g:adult>
        <g:condition>new</g:condition>
    </item>
{% endblock %}
