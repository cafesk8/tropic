{{ form_start(quickSearchForm) }}
    <div class="box-quick-search">
        <div class="box-quick-search__input">
            {{ form_widget(quickSearchForm.text, { attr:
                {
                    placeholder: 'Search by name, catalog number, or product part number...'|trans
                }
            })}}
            <i class="svg svg-info cursor-help js-tooltip box-quick-search__icon in-icon in-icon--info"
               data-toggle="tooltip" data-placement="top"
               title="{{ 'Searching searches in name, catalog number or product part number. It is possible to use wildcards * and ?.'|trans }}"
            ></i>
        </div>
        {{ form_widget(quickSearchForm.submit, { label: 'Search [verb]'|trans, attr: { class: 'box-quick-search__btn'}, full_name: '' }) }}
    </div>
    {% if isMultiple is defined and isMultiple is same as (true) %}
        <br>
        <div class="js-product-picker-all" data-js-instance-id="{{ jsInstanceId }}">
            <span class="btn js-product-picker-add-all">{{ 'Přidat všechny položky z níže vyhledaných a zavřít'|trans }}</span>
            <span class="btn js-product-picker-remove-all">{{ 'Odebrat všechny položky z níže vyhledaných a zavřít'|trans }}</span>
        </div>
    {% endif %}
{{ form_end(quickSearchForm) }}
