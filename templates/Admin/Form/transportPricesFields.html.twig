{% block transport_prices_row %}
    <div class="form-line">
        {% for domainId, price in pricesIndexedByDomainId %}
            <div class="form-line__box js-entity-url-list-domain-{{ domainId }}">
                {% if isMultidomain() %}
                    <div class="form-line__box__title">
                        <span class="form-line__box__title__image">
                            {{ domainIcon(domainId, 'large') }}
                        </span>
                        <strong class="form-line__box__title__name">
                            {{ 'Domain %domainName%'|trans({'%domainName%' : getDomainName(domainId)}) }}
                        </strong>
                    </div>
                {% endif %}
            </div>

            <div {% if isMultidomain() %} class="form-line__box__content"{% endif %}>
                {{ form_label(form.vatsIndexedByDomainId[domainId]) }}
                {{ form_widget(form.vatsIndexedByDomainId[domainId]) }}

                <div class="form-price-heading">
                    <div class="form-price-heading__cell form-price-heading__cell--field">
                        {{ inputPriceLabel({ isSimple: true }) }}
                    </div>
                    <div class="form-price-heading__block">
                        <div class="form-price-heading__cell form-price-heading__cell--price">{{ 'Calculated price excluding VAT'|trans }}</div>
                        <div class="form-price-heading__cell form-price-heading__cell--price">{{ 'Calculated price including VAT'|trans }}</div>
                    </div>
                </div>

                <div class="form-line form-line--in-box">
                    <div class="form-line__label">
                        {{ form_label(form.pricesIndexedByDomainId[domainId]) }}
                    </div>
                    <div class="form-line__side">
                        <div class="form-line__item">
                            {{ form_widget(form.pricesIndexedByDomainId[domainId], { symbolAfterInput: currencySymbolByDomainId(domainId) }) }}
                        </div>
                        <div class="form-line__item--right">
                            <div class="form-line__item__price">
                                <div class="form-line__item__price__label-mobile">
                                    {{ 'Excl. VAT'|trans }}
                                </div>
                                {{ price.priceWithoutVat|priceWithCurrencyByDomainId(domainId) }}
                            </div>
                            <div class="form-line__item__price">
                                <div class="form-line__item__price__label-mobile">
                                    {{ 'Incl. VAT'|trans }}
                                </div>
                                <strong>{{ price.priceWithVat|priceWithCurrencyByDomainId(domainId) }}</strong>
                            </div>
                        </div>
                        <div>
                            {{ form_errors(form.pricesIndexedByDomainId[domainId] ) }}
                        </div>
                    </div>
                </div>

                <div class="form-line form-line--in-box">
                    <div class="form-line__label">
                        {{ form_label(form.minFreeOrderPricesIndexedByDomainId[domainId]) }}
                    </div>
                    <div class="form-line__side">
                        <div class="form-line__item">
                            {{ form_widget(form.minFreeOrderPricesIndexedByDomainId[domainId], { symbolAfterInput: currencySymbolByDomainId(domainId) }) }}
                        </div>
                        <div>
                            {{ form_errors(form.minFreeOrderPricesIndexedByDomainId[domainId] ) }}
                        </div>
                    </div>
                </div>

                <div class="form-line form-line--in-box">
                    <div class="form-line__label">
                        {{ form_label(form.maxOrderPricesLimitIndexedByDomainId[domainId]) }}
                    </div>
                    <div class="form-line__side">
                        <div class="form-line__item">
                            {{ form_widget(form.maxOrderPricesLimitIndexedByDomainId[domainId], { symbolAfterInput: currencySymbolByDomainId(domainId) }) }}
                        </div>
                        <div>
                            {{ form_errors(form.maxOrderPricesLimitIndexedByDomainId[domainId] ) }}
                        </div>
                    </div>
                </div>

                <div class="form-line form-line--in-box">
                    <div class="form-line__label">
                        {{ form_widget(form.actionActiveIndexedByDomainId[domainId], {attr: {class: 'js-action-cb', 'data-domain': domainId}}) }}
                        {{ form_label(form.actionActiveIndexedByDomainId[domainId]) }}
                    </div>
                </div>

                <div class="js-action-price-wrapper-{{ domainId }} display-none">
                    <div class="form-line form-line--in-box">
                        <div class="form-line__label">
                            {{ form_label(form.actionPricesIndexedByDomainId[domainId]) }}
                        </div>
                        <div class="form-line__side">
                            <div class="form-line__item">
                                {{ form_widget(form.actionPricesIndexedByDomainId[domainId], { symbolAfterInput: currencySymbolByDomainId(domainId) }) }}
                            </div>
                            <div>
                                {{ form_errors(form.actionPricesIndexedByDomainId[domainId] ) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-line form-line--in-box">
                        <div class="form-line__label">
                            {{ form_label(form.minActionOrderPricesIndexedByDomainId[domainId]) }}
                        </div>
                        <div class="form-line__side">
                            <div class="form-line__item">
                                {{ form_widget(form.minActionOrderPricesIndexedByDomainId[domainId], { symbolAfterInput: currencySymbolByDomainId(domainId) }) }}
                            </div>
                            <div>
                                {{ form_errors(form.minActionOrderPricesIndexedByDomainId[domainId] ) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-line form-line--in-box">
                        <div class="form-line__label">
                            {{ form_label(form.actionDatesFromIndexedByDomainId[domainId]) }}
                        </div>
                        {{ form_widget(form.actionDatesFromIndexedByDomainId[domainId]) }}
                        <div>
                            {{ form_errors(form.actionDatesFromIndexedByDomainId[domainId] ) }}
                        </div>
                    </div>

                    <div class="form-line form-line--in-box">
                        <div class="form-line__label">
                            {{ form_label(form.actionDatesToIndexedByDomainId[domainId]) }}
                        </div>
                        {{ form_widget(form.actionDatesToIndexedByDomainId[domainId]) }}
                        <div>
                            {{ form_errors(form.actionDatesToIndexedByDomainId[domainId] ) }}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
