{% block product_flag_row %}
    {% if form.vars.value is not empty %}
        <table class="table-form">
            <thead>
            <tr class="table-form__row">
                <th class="table-form__cell">{{ 'Název'|trans }}</th>
                <th class="table-form__cell">{{ 'Od'|trans }}</th>
                <th class="table-form__cell">{{ 'Do'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for productFlag in form.vars.value %}
                <tr class="table-form__row">
                    <td class="table-form__cell">{{ productFlag.flag.name }}</td>
                    <td class="table-form__cell">
                        {{ productFlag.activeFrom|formatDate }}
                    </td>
                    <td class="table-form__cell">
                        {{ productFlag.activeTo|formatDate }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <table class="table-form">
            <thead>
            <tr class="table-form__row">
                <th class="table-form__cell">{{ 'Tento produkt nemá žádné příznaky'|trans }}</th>
            </tr>
            </thead>
        </table>
    {% endif %}
{% endblock %}
